<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="header">
      <div class="left">
        <h1><a href="/home"><%= title %></a></h1>
        <p>Welcome to <%= title %></p>
      </div>
      <div class="right">
        <% if (user) { %>
          <p>Welcome back <b><%= user.fullname %></b></p>
          <a class="btn log-out" href="/home/log-out">Log Out</a> 
        <%} else {%>
          <a class="btn sign-up" href="/home/user/sign-up">Sign Up</a>
          <a class="btn log-in" href="/home/user/log-in">Log In</a>
        <% } %>
      </div>
    </header>
    
    <% if (posts) { %>
      <% for (let post of posts) {%>
        <div class="post">
          <h2><%= post.title %></h2>
          <% if (user) {%>
          <p>
            <strong><%= post.author.fullname %></strong>
          </p>
          <% } %>
          <p class="post-info">
            <i><small><%= post.updatedAtFormatted || post.createdAtFormatted %></small></i>
          </p>
          <p><%= post.content %></p>
          <% if (!user) { %>
            <p><a href="/home/user/sign-up">Become a member</a> to see the author of this post</p>
          <% } %>
        </div>
        <hr />
      <% } %>
    <% } else { %>
      <p>There is no post.</p>
    <% } %>
  </body>
</html>
